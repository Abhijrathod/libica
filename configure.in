dnl New
dnl Process this file with autoconf to produce a configure script.
AC_INIT(libica,1.3.6)
AC_CANONICAL_SYSTEM
AM_INIT_AUTOMAKE(libica,1.3.6)


dnl Checks for programs.

dnl Checks for libraries.

dnl Checks for header files.
AC_DISABLE_STATIC

AC_PROG_CC
AC_PROG_LIBTOOL
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h sys/ioctl.h)
rm -f Makefile.macros
touch ./Makefile.macros
case "$target" in
i386* | i486* | i586* | i686* | powerpc*) AC_CHECK_HEADER(linux/icaioctl.h, ,
        AC_MSG_ERROR([*** Unable to find linux/icaioctl.h!!! Do you have the ICA device driver installed?])
) ;;
s390-*)
        echo "S390_FLAG=-m31 -D_LINUX_S390_" > ./Makefile.macros
        echo "LIBCRYPTO=-lcrypto" >> ./Makefile.macros
;;
s390x-*)
        echo "S390_FLAG=-m64 -D_LINUX_S390_ -D_LINUX_S390X_" >./Makefile.macros
        echo "LIBCRYPTO=-lcrypto" >> ./Makefile.macros
	if test $libdir = '${exec_prefix}/lib'; then
	  echo 'Overriding libdir to "${exec_prefix}/lib64"'
	  libdir='${exec_prefix}/lib64'
	fi
;;
esac

./autoversion
dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE
AC_TYPE_SIZE_T

dnl CFLAGS=-shared -fPIC -D_REENTRANT -I../include 
INCLUDES=-I./inc
CC=gcc
dnl LDFLAGS=-shared

AC_ARG_ENABLE([debug], [--enable-debug             add the -g option to
CFLAGS],./perf_script debug, ./perf_script)

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_FUNC_MEMCMP

AC_OUTPUT(Makefile src/Makefile)


