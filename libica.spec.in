%define name            @PACKAGE@
%define version         @VERSION@
%define release         3

#
# Specfile for libica from IBM
#
Summary:  Interface library to the ICA device driver
Name: %{name}
Version: %{version}
Release: %{release}
License: CPL
Group: Libraries/Crypto
Source: %{name}.tar.gz
URL: http://sourceforge.net/projects/opencryptoki
Distribution: SourceForge
Vendor: IBM
Packager: LTC Security Team
Buildroot: /tmp/libica.build

%define _topdir /usr/src/%{name}

%description
Interface library routines used by IBM modules to interface to the IBM
eServer Cryptographic Accelerator (ICA).

%prep
%setup -c %{name}-%{version}

%build
%configure
make -f Makefile

%install
%makeinstall

%files
%{_includedir}/ica_api.h
%{_libdir}/libica.so
